@model Electro_ECommerce.Models.Category

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-danger">Delete Category</h2>
        <p class="text-center">Are you sure you want to delete this category?</p>
        <div class="text-center mb-3">
            <strong>Name:</strong> @Model.Name
        </div>
        <form asp-action="Delete" method="post" class="text-center">
            <input type="hidden" asp-for="CategoryId" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
